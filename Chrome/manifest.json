{
  "manifest_version": 2,
  "name": "Copy API URL",
  "author": "Shinichi ARATA",
  "description": "Blog用にAPIドキュメントのURLをコピーするツールです",
  "version": "0.1.1",
  "permissions":[
    "activeTab",
    "clipboardRead"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "image/icon16.png",
    "64": "image/icon64.png",
    "128": "image/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "image/icon19.png",
      "38": "image/icon38.png"
    },
    "default_title": "Copy API URL"
  }
}
